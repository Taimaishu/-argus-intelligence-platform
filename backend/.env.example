# Application Settings
APP_NAME="Research Tool"
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./storage/database/research_tool.db

# Vector Database
CHROMA_PERSIST_DIRECTORY=./storage/chromadb

# File Storage
UPLOAD_DIR=./storage/uploads
MAX_UPLOAD_SIZE_MB=50

# AI Provider Selection (local, openai, anthropic, groq, deepseek, ollama)
DEFAULT_EMBEDDING_PROVIDER=local
DEFAULT_LLM_PROVIDER=ollama

# Ollama Configuration (Local Models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=llama3.2:1b
OLLAMA_LLM_MODEL=llama3:8b

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alternative AI APIs
OPENROUTER_API_KEY=your_openrouter_key_here
DEEPSEEK_API_KEY=your_deepseek_key_here
GROQ_API_KEY=your_groq_key_here
GOOGLE_API_KEY=your_google_key_here
GROK_API_KEY=your_grok_key_here

# OSINT/Security APIs (for future extensions)
SHODAN_API_KEY=your_shodan_key_here
VT_API_KEY=your_virustotal_key_here

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production-use-secrets-generate-secret-key
